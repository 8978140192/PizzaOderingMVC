@model PizzaOrderingMVCApplication.Models.UserDetail

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>RegisterPage</title>
    <!-- CSS only -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-F3w7mX95PdgyTmZZMECAngseQB83DfGTowi0iMjiWaeVhAn4FJkqJByhZMI3AhiU" crossorigin="anonymous">
    <style>
        nav {
            background-color: red;
        }

        h4 {
            text-align: center
        }

        img {
            z-index: -1;
            width: 100%;
            height: 100vh;
            position: absolute;
        }

        label {
            font-family: 'Times New Roman', Times, serif;
            font-size: 1.5rem;
            width: 8cm;
            display: inline-block;
            text-align: center;
            background-color: white;
            opacity: 0.7;
            color: black;
        }

        input {
            height: 1cm;
            width: 8cm;
            border: 1px solid black;
        }

        .form-group {
            padding: 0.2cm;
        }

        .row {
            margin-left: 7cm;
        }
    </style>
</head>
<body>
    <nav class="navbar ">
        <a class="navbar-brand" asp-action="Index">
            <img src="/docs/4.0/assets/brand/bootstrap-solid.svg" width="30" height="30" class="d-inline-block align-top" alt="">
            Go Back to Home
        </a>

    </nav>
    <img src="/images/Pizza_Refistration.png" class="embed-responsive" />
    <h4>Welcome To The Pizza</h4>


    <div class="container d-flex justify-content-center">
        <div class="row ">
            <div class="col-md-4">
                @using (Html.BeginForm("RegisterPage", "UserLogin", FormMethod.Post))
                {
                    @ViewBag.message
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="UserId" class="control-label">Enter your E-mail </label>
                        @Html.EditorFor(m => m.UserId)
                        <span asp-validation-for="UserId" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Password" class="control-label">Enter your Password </label>
                        @Html.EditorFor(m => m.Password)
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserName" class="control-label">Enter your Name  </label>
                        @Html.EditorFor(m => m.UserName)
                        <span asp-validation-for="UserName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserPhone" class="control-label">Enter your Phone </label>
                        @Html.EditorFor(m => m.UserPhone)
                        <span asp-validation-for="UserPhone" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserAge" class="control-label">Enter your Age </label>
                        @Html.EditorFor(m => m.UserAge)
                        <span asp-validation-for="UserAge" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="UserAddress" class="control-label">Enter your Address </label>
                        @Html.EditorFor(m => m.UserAddress)
                        <span asp-validation-for="UserAddress" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-success" />
                    </div>

                }

            </div>
        </div>
    </div>




</body>
</html>
