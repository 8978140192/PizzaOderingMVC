@model List<PizzaOrderingMVCApplication.Models.CustomerPizzaDetails>
@{
    ViewData["Title"] = "SummaryPage";
}

<h1>SummaryPage</h1>

<table id="tblCustomer">
    <thead>
        <tr>
            <th>Count   </th>
            <th>PizzaName   </th>
            <th>Toppings    </th>
            <th>Qty</th>

        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            <tr>
               
                <td>@Model[i].pizzaId</td>
                <td>

                    onion <input type="checkbox" checked="@Model[i].onion" disabled="disabled" />
                    <br />
                    crispCapsicum <input type="checkbox" checked="@Model[i].crispCapsicum" disabled="disabled" />
                    <br />
                    GrilledMushroom <input type="checkbox" checked="@Model[i].GrilledMushroom" disabled="disabled" />
                </td>
                <td>@Model[i].qty</td>
            </tr>

        }
    </tbody>
</table>
<div class="btn-group position-absolute  translate-middle mt-1 bi bi-caret-down-fill">
    <a class="btn btn-primary " asp-area="" asp-controller="UserLogin" asp-action="ConformOrder">CONFORM ORDER</a>
    <a class="btn btn-primary" asp-area="" asp-controller="UserLogin" asp-action="PizzaDetailsPage">ALTER ORDER</a>
    <a class="btn btn-primary" asp-area="" asp-controller="UserLogin" asp-action="CancleOrder">CANCLE ORDER</a>

</div>
